# npm workspaces configuration

# Ensure package-lock.json is always generated
package-lock=true

# Use ci mode for cleaner installs
# (optional, but useful for CI/CD)

# Install workspace dependencies from workspace packages
# rather than registry when possible
# prefer-workspace-packages=true

# Prevent automatic package hoisting issues
# by ensuring each workspace can resolve its own dependencies
legacy-peer-deps=false

# Generate package-lock for workspaces
# Ensures reproducible builds
# auto-install-peers=true
