{
  "name": "acarshub-react",
  "private": true,
  "version": "4.0.1",
  "type": "module",
  "homepage": ".",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-sprites && tsc -b && vite build",
    "generate-sprites": "tsx scripts/generate-colored-sprites.ts",
    "lint": "biome check .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:a11y": "playwright test e2e/accessibility.spec.ts --project=chromium",
    "test:a11y:debug": "playwright test e2e/accessibility.spec.ts --project=chromium --debug",
    "lighthouse": "npm run build && lhci autorun",
    "lighthouse:collect": "npm run build && lhci collect",
    "lighthouse:assert": "lhci assert",
    "analyze": "npm run build && open dist/stats.html"
  },
  "dependencies": {
    "@acarshub/types": "*",
    "@airframes/acars-decoder": "1.8.7",
    "@fortawesome/fontawesome-svg-core": "7.2.0",
    "@fortawesome/free-regular-svg-icons": "7.2.0",
    "@fortawesome/free-solid-svg-icons": "7.2.0",
    "@fortawesome/react-fontawesome": "3.2.0",
    "chart.js": "4.5.1",
    "chartjs-adapter-date-fns": "3.0.0",
    "chartjs-plugin-datalabels": "2.2.0",
    "date-fns": "4.1.0",
    "loglevel": "1.9.2",
    "maplibre-gl": "5.18.0",
    "react": "19.2.4",
    "react-chartjs-2": "5.3.1",
    "react-dom": "19.2.4",
    "react-map-gl": "8.1.0",
    "react-router-dom": "7.13.0",
    "socket.io-client": "4.8.3",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.1",
    "@biomejs/biome": "2.4.2",
    "@lhci/cli": "0.15.1",
    "@playwright/test": "1.58.2",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "25.2.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/ui": "4.0.18",
    "axe-core": "4.11.1",
    "canvas": "3.2.1",
    "happy-dom": "20.6.1",
    "jsdom": "28.1.0",
    "rollup-plugin-visualizer": "6.0.5",
    "sass": "1.97.3",
    "sharp": "0.34.5",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-node-polyfills": "0.25.0",
    "vitest": "4.0.18"
  },
  "overrides": {
    "rimraf": "6.1.3",
    "glob": "13.0.0",
    "inflight": "npm:@zkochan/inflight@2.0.0"
  }
}
