server {
  listen 80 default_server;

  root /webapp/dist;
  server_name _;

  # Trust X-Forwarded-For from reverse proxies (all private networks + localhost)
  set_real_ip_from 10.0.0.0/8;
  set_real_ip_from 172.16.0.0/12;
  set_real_ip_from 192.168.0.0/16;
  set_real_ip_from 127.0.0.1/32;
  real_ip_header X-Forwarded-For;
  real_ip_recursive on;

  proxy_http_version 1.1;
  proxy_set_header Upgrade $http_upgrade;
  proxy_set_header Connection $connection_upgrade;
  proxy_set_header Host $host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Real-Port $remote_port;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X-Forwarded-Proto $scheme;
  proxy_set_header X-Forwarded-Host $host;
  include /etc/nginx/mime.types;

  # mjs is not in default mime types, add in here
  types {
    application/javascript mjs;
    # Map GeoJSON to application/json so it is included in gzip_types and
    # receives on-the-fly compression.  Without this nginx falls back to
    # default_type (application/octet-stream) which is not in gzip_types,
    # leaving the large TRACON/FIR overlay files (2.5â€“2.7 MB each) served
    # completely uncompressed.
    application/json geojson;
  }
	default_type application/octet-stream;
  access_log off;

  # Serve pre-compressed .gz files when available (generated at Docker build time).
  # nginx looks for filename.gz alongside the original; if found and the client
  # sends Accept-Encoding: gzip, the pre-compressed file is served directly with
  # no runtime compression cost.  This is especially valuable for the large
  # GeoJSON overlay files (TRACONBoundaries 2.5 MB, FIRBoundaries 2.7 MB) and
  # the JS/CSS bundles.
  gzip_static on;

  #Catch 40x errors:
  #error_page 400 401 402 403 404 = @RedirectToHome;

  #Catch 50x errors:
  #error_page 500 501 502 503 504 = @RedirectToHome;

  #location @RedirectToHome {
  #  return 302 $scheme://$http_host;
  #}

  # point the stat image files to the dir they're dumped in, mark as no cache
  location ~ (.*hour.*|.*week.*|.*month.*|.*year.*|.*days.*).png {
    add_header Cache-Control 'no-cache';
    root /database/images;
  }

  # proxy stats.json to Node.js backend (replaces legacy static file)
  location /data/stats.json {
    add_header Cache-Control 'no-cache';
    proxy_pass http://127.0.0.1:8888;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # cache hashed assets immutably (they have content hashes in filenames)
  location ~ \.(css|js|png|jpg|jpeg|gif|ico|woff|woff2|ttf|svg|eot|otf|map|mjs|mp3)$ {
    expires 1y;
    add_header Cache-Control "public, immutable";
  }

  # proxy pass the web socket to gunicorn (supports any base path)
  # Matches /socket.io or /any/path/socket.io
  location ~ ^(.*)/socket\.io {
    rewrite ^(.*)/socket\.io(.*)$ /socket.io$2 break;
    proxy_pass http://127.0.0.1:8888;

    # WebSocket upgrade headers (Safari compatibility)
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;

    # Safari-specific WebSocket timeouts and buffering
    proxy_connect_timeout 7d;
    proxy_send_timeout 7d;
    proxy_read_timeout 7d;

    # Disable buffering for WebSocket (critical for Safari)
    proxy_buffering off;
    proxy_cache off;

    # Prevent nginx from closing connections
    proxy_redirect off;
  }

  # proxy pass the HeyWhatsThat coverage GeoJSON to the backend
  # The ?v= query parameter acts as a cache-bust token (handled transparently by nginx)
  location ~ ^(.*)/data/heywhatsthat\.geojson {
    rewrite ^(.*)/data/heywhatsthat\.geojson(.*)$ /data/heywhatsthat.geojson$2 break;
    proxy_pass http://127.0.0.1:8888;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    add_header Cache-Control 'public, max-age=86400';
  }

  # proxy pass the metrics endpoint to gunicorn (supports any base path)
  # Matches /metrics or /any/path/metrics
  location ~ ^(.*)/metrics$ {
    rewrite ^(.*)/metrics$ /metrics break;
    proxy_pass http://127.0.0.1:8888;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    add_header Cache-Control 'no-cache';
  }

  # index page - must not be cached so new builds are picked up immediately
  location = / {
    add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
    add_header Pragma 'no-cache';
    add_header Expires '0';
    try_files /index.html =404;
  }

  # SPA routing - all React Router paths serve index.html - must not be cached
  location ~ ^/(live-messages|live-map|search|alerts|stats|about|status)$ {
    add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
    add_header Pragma 'no-cache';
    add_header Expires '0';
    try_files /index.html =404;
  }

  # Fallback for any other routes (SPA routing)
  location / {
    try_files $uri $uri/ /index.html;
  }
}
