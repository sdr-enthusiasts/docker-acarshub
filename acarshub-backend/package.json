{
  "name": "@acarshub/backend",
  "version": "4.0.0",
  "description": "ACARS Hub Node.js backend server",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:generate": "drizzle-kit generate"
  },
  "keywords": [
    "acars",
    "aviation",
    "backend",
    "socket.io"
  ],
  "author": "Frederick Clausen II",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@acarshub/types": "*",
    "@fastify/cors": "^11.2.0",
    "better-sqlite3": "12.6.2",
    "drizzle-orm": "0.45.1",
    "fastify": "5.7.4",
    "pino": "10.3.1",
    "pino-pretty": "13.1.3",
    "prom-client": "^15.1.3",
    "socket.io": "4.8.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "25.2.3",
    "drizzle-kit": "0.31.9",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "overrides": {
    "rimraf": "6.1.3",
    "glob": "13.0.0",
    "inflight": "npm:@zkochan/inflight@2.0.0"
  }
}
